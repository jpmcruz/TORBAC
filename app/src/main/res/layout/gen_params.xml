<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rbits"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/et_Rbits"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="12"
            android:gravity="center"
            android:textSize="30dp"  >
          
                     
        </EditText>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qbits"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/et_Qbits"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="23"
            android:gravity="center"
            android:textSize="30dp" >

           
        </EditText>

        <Button
            android:id="@+id/bt_GenParams"
            android:layout_width="188dp"
            android:layout_height="74dp"
            android:text="Create"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" >

        <Button
            android:id="@+id/bt_MasterSave"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:text="Save Master"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_BaseSave"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:text="Save Base"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:gravity="center_horizontal"
        android:text="Enter positive integers on the rbits and qbits and Press the Create Button."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30dp" />

</RelativeLayout>