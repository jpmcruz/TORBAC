<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base File"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/spinner_base"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LinearLayout01"
        android:layout_below="@+id/LinearLayout01"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role Name"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textSize="27dp"/>

        <EditText
            android:id="@+id/et_roleName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="27dp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/bt_Challenge"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Challenge" 
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="20dp"  >

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Challenge Data:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Response Data:"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textSize="30dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LinearLayout02"
        android:layout_below="@+id/LinearLayout02"
        android:text="Choose Base File and Enter Role Name to Challenge."
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textSize="30sp"
         android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LinearLayout03"
        android:layout_below="@+id/LinearLayout03"
        android:layout_marginTop="20dp"  >

        <TextView
            android:id="@+id/tv_ChallengeData"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="\n\n\n\n\n\n"
            android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="29dp"
             />

        <TextView
            android:id="@+id/tv_ResponseData"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="\n\n\n\n\n\n"
            android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="29dp" />

    </LinearLayout>

</RelativeLayout>